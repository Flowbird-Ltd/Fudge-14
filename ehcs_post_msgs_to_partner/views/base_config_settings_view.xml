<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_post_msgs_partner_config_settings" model="ir.ui.view">
        <field name="name">post.msgs.partner.configuration.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="user_default_rights" position="after">
                <h2>Post Chatter Messages to Partner</h2>
                <div class="row mt16 o_settings_container" id="user_default_rights">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="post_msg_from_sales"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="post_msg_from_sales"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="post_msg_from_lead"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="post_msg_from_lead"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="post_msg_from_invoice"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="post_msg_from_invoice"/>
                        </div>
                    </div>
                 </div>
            </div>
        </field>
    </record>

</odoo>
